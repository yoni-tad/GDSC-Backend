<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= article.title%>" id="title" class="form-control mb-4" required>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control mb-4" required><%= article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control mb-4" required><%= article.markdown%></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button class="btn btn-primary my-2" type="submit">Save</button>